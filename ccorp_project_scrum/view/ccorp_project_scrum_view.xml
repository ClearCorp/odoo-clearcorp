                            <group>
                                <field name="partner_id" /> 
                                <field name="expected_hours" />
                                <field name="effective_hours" />
                                <field name="remaining_hours" />
                            </group>
                            <group>
                                <field name="date_start" />
                                <field name="date_end" />
                                <field name="deadline" />
                                <field name="progress" widget="progressbar" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Tasks" name="tasks">
                                <field name="task_ids"
                                    attrs="{'readonly':['|',('state','=','cancelled'),'|',
                                    ('state','=','draft'),('state','=','done')]}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

