                            domain="[]" context="{'group_by':'priority'}" />
                        <filter string="Type" name="group_type"
                            domain="[]" context="{'group_by':'type_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- project.scrum.sprint -->
        <!-- form -->
        <record id="view_sprint_form" model="ir.ui.view">
            <field name="name">view.sprint.form</field>
            <field name="model">ccorp.project.scrum.sprint</field>
            <field name="type">form</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <form string="Sprint" version="7.0">
                    <header>
                        <button name="set_done" type="object"
                            string="Done" states="open,pending"
                            confirm="Are you sure you want to set as done this sprint?" />
                        <button name="set_cancel" type="object"
                            string="Cancel" states="open,pending"
                            confirm="Are you sure you want to cancel this sprint?" />
                        <field name="stage_id" widget="statusbar"
                            clickable="True" />
                        <field name="state" invisible="True" />
                    </header>
                    <sheet>
                        <div class="oe_right oe_button_box" name="buttons"
                            groups="base.group_user">
                            <button name="tasks_from_features"
                                string="Tasks from Features" type="object"
                                attrs="{'invisible':['|',('state','=','cancelled'),'|',
                                    ('state','=','draft'),('state','=','done')]}"
                                confirm="Are you sure you want to create a task for each feature related to this sprint?" />
