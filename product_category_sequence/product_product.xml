<?xml version="1.0"?>
<openerp>
    <data>
        <record id="product_normal_form_view_inherit" model="ir.ui.view">
            <field name="name">product.normal.form.view.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ean13']" position="after">
                    <field name="ir_sequence_id" attrs="{'invisible':True}"/>
                </xpath>
                <xpath expr="//field[@name='default_code']" position="attributes">
                    <attribute name="attrs">{'readonly': [('ir_sequence_id','!=', False)]}</attribute>
                </xpath>
            </field>
        </record>

        <record id="product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.form.view.inherit2</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="account.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page/group/div/field[@name='categ_id']" position="attributes">
                    <attribute name="on_change">onchange_categ_id(categ_id)</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>