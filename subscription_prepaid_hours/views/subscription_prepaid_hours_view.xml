<?xml version="1.0" encoding="UTF-8"?>

<openerp>
<data>


<!-- account.analytic.account -->
        <!-- Form -->
        <record id="analytic_analytic_account_form2" model="ir.ui.view">
            <field name="name">Invoice</field>
            <field name="model">account.analytic.account</field>
            <field name="priority" eval="160" />
            <field name="inherit_id"
                ref="project_work_type.analytic_analytic_account_form2" />
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@string='Invoice Configuration']"
                    position="replace">
                    <page string="Invoice Configuration">
                        <div>
                            <label for="invoice_type_id" string="Invoice Type" class="oe_inline" />
                            <field name="invoice_type_id" string="Invoice Type" class="oe_inline">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="product_price"/>
                                    <field name="product_id"/>
                                    <field name="price"
                                        attrs="{'readonly': [('product_price','=',True)]}" />
                                   <field name="prepaid_hours_id"/>
                                </tree>
                            </field>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>
        
        <record id="analytic_analytic_account_form3" model="ir.ui.view">
            <field name="name">Hours groups</field>
            <field name="model">account.analytic.account</field>
            <field name="priority" eval="160" />
            <field name="inherit_id"
                ref="analytic.view_account_analytic_account_form" />
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[@name='contract_page']" position="after">
                    <page string="Hours Groups" name="hours_group">
                        <field name="prepaid_hours_id">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="quantity"/>
                                <field name="date" />
                            </tree>
                        </field>
                    </page>
                </xpath>
           </field>
       </record>
       
       <!-- prepaid hours -->
       <!-- Form -->
       <record id="view_prepaid_hours_approval_form" model="ir.ui.view">
            <field name="name">view.prepaid.hours.form</field>
            <field name="model">account.analytic.prepaid_hours_approval</field>
            <field name="type">form</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <form name="Approvals">
                    <sheet>
                        <group>
                            <group>
                                <field name="ticket_id" />
                                <field name="user_id" />
                                <field name="sequence" />
                            </group>
                            <group>
                                <field name="date" />
                                <field name="state" />
                            </group>
                            <field name="approval_line_ids" widget="one2many_list" class="oe_inline" />
<!--                             <field name="approval_values"  widget="one2many_list" class="oe_inline"/> -->
                        </group>
                    </sheet>
                </form>
            </field>
       </record>
       <!-- approval line -->
       <!-- Tree -->
       <record id="view_prepaid_hours_approval_line_tree" model="ir.ui.view">
            <field name="name">view.prepaid.hours.approval.line.tree</field>
            <field name="model">account.analytic.prepaid_hours_approval_line</field>
            <field name="type">tree</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <tree string="Approval Lines" name="approva lines">
                    <field name="prepaid_hours_id" />
                    <field name="work_type_id" />
                    <field name="approval_id" />
                    <field name="requested_hours" />
                    <field name="extra_hours" />
                    <field name="extra_amount" />
                </tree>
            </field>
       </record>
       <!-- approval values -->
       <!-- Tree -->
       <record id="view_prepaid_hours_approved_values_tree" model="ir.ui.view">
            <field name="name">view.prepaid.hours.approved.values.tree</field>
            <field name="model">account.analytic.prepaid_hours_approved_values</field>
            <field name="type">tree</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <tree string="Approved Values" name="approved values">
                    <field name="prepaid_hours_id" />
                    <field name="prepaid_hours" />
                    <field name="expent_hours" />
                    <field name="remaining_hours" />
                    <field name="tobe_approve" />
                    <field name="requested_hours" />
                    <field name="extra_hours" />
                    <field name="extra_amount" />
                    <field name="approval_id" />
                </tree>
            </field>
       </record>
</data>
</openerp>
