<openerp>
    <data>
        <record id="view_project" model="ir.ui.view">
            <field name="name">project.view_project1</field>
            <field name="model">project.project</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="project.view_project" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//tree/field[@name='name']" position="replace">
                        <field name="complete_name" />
                    </xpath>
                </data>
            </field>
        </record>

        <!-- kanban -->
        <record id="view_project_kanban" model="ir.ui.view">
            <field name="name">view.project.kanban</field>
            <field name="model">project.project</field>
            <field name="sequence" eval="20" />
            <field name="inherit_id" ref="project.view_project_kanban" />
            <field name="arch" type="xml">
                <data>
                    <xpath
                        expr="//kanban/templates/t/div/div[@class='oe_kanban_content']/h4/strong/field[@name='name']"
                        position="replace">
                        <field name="complete_name" />
                    </xpath>
                </data>
            </field>
        </record>

        <record id="view_project_search" model="ir.ui.view">
            <field name="name">view.project.search</field>
            <field name="model">project.project</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="project.view_project_project_filter" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//search/field[@name='name']" position="before">
                        <field name="complete_name" string="Project Name"/>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>
