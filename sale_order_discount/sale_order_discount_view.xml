<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
	<data>
		<record id="view_order_form_inherit" model="ir.ui.view">
			<field name="name">sale.order.form.inherit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="type">form</field>
			<field name="arch" type="xml">
			  <xpath expr="/form/sheet/notebook/page[@string='Order Lines']/field[@name='order_line']/form[@string='Sales Order Lines']" position="attributes">
                        <attribute name="editable"></attribute>
                 </xpath>
				<field name="price_subtotal" position="replace">
						<field name="price_subtotal_not_discounted" widget='monetary' options="{'currency_field': 'currency_id'}"/>
				</field>
				<field name="amount_untaxed" position="before">
						<field name="amount_untaxed_not_discounted" sum="Untaxed amount(Not Discounted)" widget='monetary' options="{'currency_field': 'currency_id'}"/>
				</field>
				<field name="amount_tax" position="before">
					<field name="amount_discounted" widget='monetary' options="{'currency_field': 'currency_id'}"/>
				</field>
				<field name="amount_tax" position="after">
					<field name="order_discount"/>
				</field>
			</field>
		</record>
	</data>
</openerp>