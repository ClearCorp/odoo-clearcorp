        <!-- kanban -->
        <record model="ir.ui.view" id="view_feature_kanban">
            <field name="name">view.feature.kanban</field>
            <field name="model">project.scrum.feature</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="state" />
                    <field name="color" />
                    <field name="priority" />
                    <field name="partner_id" />
                    <field name="remaining_hours" sum="Remaining Hours" />
                    <templates>
                        <t t-name="kanban-box">
                            <div
                                t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                                <div
                                    class="oe_dropdown_toggle oe_dropdown_kanban">
                                    <span class="oe_e">í</span>
                                    <ul class="oe_dropdown_menu">
                                        <t
                                            t-if="widget.view.is_action_enabled('edit')">
                                            <li>
                                                <a type="edit">Edit...</a>
                                            </li>
                                        </t>
                                        <t
                                            t-if="widget.view.is_action_enabled('delete')">
                                            <li>
                                                <a type="delete">Delete</a>
                                            </li>
                                        </t>
                                        <li>
                                            <ul class="oe_kanban_colorpicker"
                                                data-field="color" />
                                        </li>
                                    </ul>
                                </div>
                                <div class="oe_kanban_content">
                                    <div>
                                        <b>
                                            <field name="code" />
                                            -
                                            <field name="name" />
                                        </b>
                                    </div>
                                    <div>
                                        <!-- <field name="project_id" /> -->
                                        <br />
                                        <t
                                            t-if="record.deadline.raw_value and record.deadline.raw_value lt (new Date())"
                                            t-set="red">oe_kanban_text_red</t>
                                        <span t-attf-class="#{red || ''}">
                                            <i>
                                                <field name="deadline" />
                                            </i>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <div class="oe_bottom_elems">
                                            <div class="oe_star">
                                                <a
                                                    t-if="record.priority.raw_value == 5"
                                                    type="object"
                                                    string="Very Low"
                                                    name="set_low_priority"
                                                    class="oe_e oe_star_gray">7</a>
                                                <a
                                                    t-if="record.priority.raw_value == 4"
                                                    type="object"
                                                    string="Low"
                                                    name="set_medium_priority"
                                                    class="oe_e oe_star_blue">7</a>
                                                <a
                                                    t-if="record.priority.raw_value == 3"
                                                    type="object"
                                                    string="Medium"
                                                    name="set_high_priority"
                                                    class="oe_e oe_star_green">7</a>
                                                <a
                                                    t-if="record.priority.raw_value == 2"
                                                    type="object"
                                                    string="High"
                                                    name="set_very_high_priority"
                                                    class="oe_e oe_star_yellow">7</a>
                                                <a
                                                    t-if="record.priority.raw_value == 1"
                                                    type="object"
                                                    string="Very High"
                                                    name="set_very_low_priority"
                                                    class="oe_e oe_star_red">7</a>
                                            </div>
                                            <img
                                                t-att-src="kanban_image('res.partner', 'image_small', record.partner_id.raw_value)"
                                                t-att-title="record.partner_id.value"
                                                width="24" height="24"
                                                class="oe_kanban_avatar" />
                                        </div>
                                    </div>
                                    <div class="oe_kanban_footer_left">
                                        <span title="Remaining Hours">
                                            <span class="oe_e">N</span>
                                            <t
                                                t-esc="Math.round(record.remaining_hours.raw_value)" />
                                        </span>
                                    </div>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- search -->
        <record id="view_feature_search" model="ir.ui.view">
            <field name="name">view.feature.search</field>
            <field name="model">project.scrum.feature</field>
            <field name="arch" type="xml">
                <search string="Feature">
                    <field name="name"
                        filter_domain="['|',('name','ilike',self),('code','ilike',self)]" />
                    <field name="project_id"/>
                    <separator />
                    <filter string="New" name="new"
                        domain="[('state','=','draft')]" />
                    <filter string="Approved" name="approved"
                        domain="[('state','=','approved')]" />
                    <filter string="In Progress" name="in_progress"
                        domain="[('state','=','open')]" />
                    <filter string="Cancelled" name="cancelled"
                        domain="[('state','=','cancelled')]" />
                    <filter string="Done" name="done"
                        domain="[('state','=','done')]" />
                    <separator />
                    <group expand="1" string="Group By...">
                        <filter string="Project" name="group_project"
                            domain="[]" context="{'group_by':'project_id'}" />
                        <filter string="Release Backlog" name="group_release_backlog"
                            domain="[]" context="{'group_by':'release_backlog_id'}" />
                        <filter string="Stage" name="group_stage"
                            domain="[]" context="{'group_by':'state'}" />
                        <filter string="Priority" name="group_priority"
