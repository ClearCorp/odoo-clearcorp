<openerp>
    <data>
        <!-- views -->
        <!-- project.project -->
        <!-- form -->
        <record id="view_project_form" model="ir.ui.view">
            <field name="name">view.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project" />
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/div/div/label[@for='use_tasks']" position="after">
                    <field name="is_scrum" class="oe_inline" attrs="{'invisible': [('use_tasks','=',False)]}" />
                    <label for="is_scrum" attrs="{'invisible': [('use_tasks','=',False)]}" />
                 </xpath>
                 <xpath expr="//form/sheet/notebook/page[3]" position="after">
                    <page string="Release Backlogs" name="release_backlogs">
                        <field name="release_backlog_ids" attrs="{'readonly':['!','|',('state','=','open'),('state','=','pending')]}" context="{'project_id': id}" />
                     </page>
                 </xpath>
            </field>
        </record>

        <!-- project.task -->
        <!-- form -->
       <record id="view_task_form" model="ir.ui.view">
            <field name="name">view.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">

                <!-- Non-existent field - project.task doesn't have it anymore-->
                    <xpath expr="//form/sheet/notebook/page/field[@name='work_ids']"
                        position="attributes">
                        <attribute name="attrs">{'readonly': ['|',('state','!=','open')]}</attribute>
                    </xpath>

                <xpath expr="//form/sheet/group/group/field[@name='project_id']"
                    position="after">
                    <field name="is_scrum" invisible="True" />
                    <field name="sprint_id"
                        attrs="{'invisible': [('is_scrum','=',False)]}"/>
                    <field name="feature_id"
                        attrs="{'invisible': [('is_scrum','=',False)]}"/>
                    <field name="feature_type_id" />
                </xpath>

                <!-- Non-existent field -->
                <xpath
                    expr="//form/sheet/notebook/page[@string='Extra Info']/group/group/field[@name='date_end']"
                    position="attributes">
                         <attribute name="attrs">{'readonly': [('state','=','done')]}</attribute>
                </xpath>

                <!-- Sequence page -->
                <xpath
                    expr="//form/sheet/notebook/page[@string='Extra Info']"
                    position="after">
                    <page string="Sequence" name="sequence">
                        <separator string="Previous Tasks" />
                        <field name="previous_task_ids"
                            attrs="{'readonly': [('state','in',['done','cancelled'])]}" />
                        <separator string="Next Tasks" />
                        <field name="next_task_ids"
                            attrs="{'readonly': [('state','in',['done','cancelled'])]}" />
                    </page>
                </xpath>
                <xpath
                    expr="//form/sheet/group/group/field[@name='date_deadline']"
                    position="attributes">
                    <attribute name="attrs">{'readonly': [('state','!=','draft')], 'required': [('state','=','draft')]}</attribute>
                </xpath>
            </field>
       </record>
       
        <!-- Search -->

        <record id="view_scrum_task_search" model="ir.ui.view">
            <field name="name">Task Search</field>
            <field name="model">project.task</field>
            <field name="type">search</field>
            <field name="priority" eval="60" />
            <field name="inherit_id" ref="project.view_task_search_form" />
            <field name="arch" type="xml">
                    <xpath expr="//search/field[@name='stage_id']" position="after">
                    <field name="sprint_id" />
                    </xpath>
                    <xpath expr="//search/group/filter[@string='Company']" position="after">
                    <filter name="filter_sprint" string="Sprint" icon="Sprint" 
                        context="{'group_by':'sprint_id'}"/>
                        </xpath>
            </field>
        </record>

        <!-- project.scrum.release.backlog -->
        <!-- form -->
        <record id="view_release_backlog_form" model="ir.ui.view">
            <field name="name">view.release.backlog.form</field>
            <field name="model">project.scrum.release.backlog</field>
            <field name="type">form</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <form string="Release Backlog" version="7.0">
                    <header>
                        <button name="do_done" type="object"
                            string="Done" states="open,pending" class="oe_highlight"
                            confirm="Are you sure you want to set as done this release backlog?" />
                        <button name="do_cancel" type="object"
                            string="Cancel" states="open,pending"
                            confirm="Are you sure you want to cancel this release backlog?" />
                        <field name="stage_id" widget="statusbar"
                            clickable="True" />
                        <field name="state" invisible="True" />
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                        <group>
                            <group>
                                <field name="project_id" />
                                <field name="expected_hours" />
                                <field name="effective_hours" />
                                <field name="remaining_hours" />
                            </group>
                            <group>
                                <field name="date_start" />
                                <field name="date_end" />
                                <field name="deadline" />
                                <field name="progress" widget="progressbar" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Features" name="features">
                                <field name="feature_ids" widget="many2many"
                                    domain="[('release_backlog_id','=',False),('state','in',['approved','open']),('project_id','=',project_id)]"
                                    attrs="{'readonly':['|',('state','=', 'cancelled'),('state','=', 'done')]}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- tree -->
        <record id="view_release_backlog_tree" model="ir.ui.view">
            <field name="name">view.release.backlog.tree</field>
            <field name="model">project.scrum.release.backlog</field>
            <field name="type">tree</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <tree string="Release Backlog"
                    colors="grey:state in ('cancelled','done');blue:state == 'pending';
                        red:(deadline&lt;date_end) and (state in ('draft','pending','open'))">
                    <field name="name" />
                    <field name="project_id" invisible="True" />
                    <field name="expected_hours" />
                    <field name="remaining_hours" />
                    <field name="date_end" />
                    <field name="deadline" />
                    <field name="state" />
                    <field name="progress" widget="progressbar" />
                </tree>
            </field>
        </record>

        <!-- kanban -->
        <record model="ir.ui.view" id="view_release_backlog_kanban">
            <field name="name">view.release.backlog.kanban</field>
            <field name="model">project.scrum.release.backlog</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id">
                    <field name="color" />
                    <field name="state" />
                    <field name="remaining_hours" sum="Remaining Hours" />
                    <templates>
                        <t t-name="kanban-box">
                            <div
                                t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                                <div
                                    class="oe_dropdown_toggle oe_dropdown_kanban">
                                    <span class="oe_e">í</span>
                                    <ul class="oe_dropdown_menu">
                                        <t
                                            t-if="widget.view.is_action_enabled('edit')">
                                            <li>
                                                <a type="edit">Edit...</a>
                                            </li>
                                        </t>
                                        <t
                                            t-if="widget.view.is_action_enabled('delete')">
                                            <li>
                                                <a type="delete">Delete</a>
                                            </li>
                                        </t>
                                        <li>
                                            <ul class="oe_kanban_colorpicker"
                                                data-field="color" />
                                        </li>
                                    </ul>
                                </div>
                                <div class="oe_kanban_content">
                                    <div>
                                        <b>
                                            <field name="name" />
                                        </b>
                                    </div>
                                    <div>
                                        <field name="project_id" />
                                        <br />
                                        <t
                                            t-if="record.deadline.raw_value and record.deadline.raw_value lt (new Date())"
                                            t-set="red">oe_kanban_text_red</t>
                                        <span t-attf-class="#{red || ''}">
                                            <i>
                                                <field name="deadline" />
                                            </i>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_footer_left">
                                        <span title="Remaining Hours">
                                            <span class="oe_e">N</span>
                                            <t
                                                t-esc="Math.round(record.remaining_hours.raw_value)" />
                                        </span>
                                    </div>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- search -->
        <record id="view_release_backlog_search" model="ir.ui.view">
            <field name="name">view.release.backlog.search</field>
            <field name="model">project.scrum.release.backlog</field>
            <field name="arch" type="xml">
                <search string="Project">
                    <field name="name" />
                    <field name="project_id" />
                    <separator />
                    <filter string="New" name="new"
                        domain="[('state','=','draft')]" />
                    <filter string="In Progress" name="in_progress"
                        domain="[('state','=','open')]" />
                    <filter string="Cancelled" name="cancelled"
                        domain="[('state','=','cancelled')]" />
                    <filter string="Pending" name="pending"
                        domain="[('state','=','pending')]" />
                    <filter string="Closed" name="closed"
                        domain="[('state','=','close')]" />
                    <separator />
                    <group expand="1" string="Group By...">
                        <filter string="Scrum Master" name="group_scrum_master"
                            domain="[]" context="{'group_by':'user_id'}" />
                        <filter string="Project" name="group_project"
                            domain="[]" context="{'group_by':'project_id'}" />
                        <filter string="Stage" name="group_stage"
                            domain="[]" context="{'group_by':'state'}" />
                    </group>
                    <separator />
                    <filter name="filter_project" string="Project" icon="Project" 
                        domain="[]" context="{'group_by':'project_id'}"/>
                </search>
            </field>
        </record>

        <!-- project.scrum.feature -->
        <!-- form -->
        <record id="view_feature_form" model="ir.ui.view">
            <field name="name">view.feature.form</field>
            <field name="model">project.scrum.feature</field>
            <field name="type">form</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <form string="Feature" version="7.0">
                    <header>
                        <button name="set_open" type="object"
                            string="Open" class="oe_highlight"
                            states="draft,cancelled,done" />
                        <button name="set_done" type="object"
                            string="Done" class="oe_highlight" states="open" />
                        <button name="set_cancel" type="object"
                            string="Cancel" states="open" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <div style="display: inline-block;">
                                <div>
                                    <style>
                                        .feature_custom input {
                                        width:150px !important;
                                        }
                                    </style>
                                    <field name="code"
                                        class="oe_inline feature_custom"
                                        width="20px" placeholder="Code..." />
                                </div>
                            </div>
                            -
                            <field name="name" class="oe_inline"
                                placeholder="Feature Summary" />
                        </h1>
                        <group>
                            <group>
                                <field name="project_id" />
                                <field name="release_backlog_id" domain="[('project_id','=',project_id)]"
                                       attrs="{'readonly':[('state','=','open')]}"/>/>
                                <field name="partner_id" />
                                <field name="priority" />
                                <field name="type_id" />
                                <field name="expected_hours"
                                    required="True" />
                            </group>
                            <group>
                                <field name="date_start" />
                                <field name="date_end" />
                                <field name="deadline" />
                                <field name="effective_hours" />
                                <field name="remaining_hours" />
                                <field name="progress" widget="progressbar" />
                                <field name="validation_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description"
                                    placeholder="Add a Description..." />
                                <field name="task_ids" />
                            </page>
                            <page string="Acceptance Requirements" name="acceptance_requirements">
                            <label for="acceptance_requirements_client" string="Please describe what you expect of this functionality"/>
                            <field name="acceptance_requirements_client"/>
                            <br/><br/>
                            <label for="acceptance_requirements_supplier" string="Please describe the functional analysis of this functionality"/>
                            <field name="acceptance_requirements_supplier"/>
                    </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                            groups="base.group_user" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <!-- tree -->
        <record id="view_feature_tree" model="ir.ui.view">
            <field name="name">view.feature.tree</field>
            <field name="model">project.scrum.feature</field>
            <field name="type">tree</field>
