                                            t-if="record.deadline.raw_value and record.deadline.raw_value lt (new Date())"
                                            t-set="red">oe_kanban_text_red</t>
                                        <span t-attf-class="#{red || ''}">
                                            <i>
                                                <field name="deadline" />
                                            </i>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_footer_left">
                                        <span title="Remaining Hours">
                                            <span class="oe_e">N</span>
                                            <t
                                                t-esc="Math.round(record.remaining_hours.raw_value)" />
                                        </span>
                                    </div>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- calendar -->
        <record id="view_sprint_calendar" model="ir.ui.view">
            <field name="name">view.sprint.calendar</field>
            <field name="model">project.scrum.sprint</field>
            <field name="type">calendar</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <calendar string="Sprint" date_start="date_start"
                    date_stop="deadline">
                    <field name="name" />
                </calendar>
            </field>
        </record>

        <!-- gantt -->
        <record id="view_sprint_gantt" model="ir.ui.view">
            <field name="name">view.sprint.gantt</field>
            <field name="model">project.scrum.sprint</field>
            <field name="type">gantt</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <gantt string="Sprint" date_start="date_start"
                    date_stop="deadline" color="id">
                    <level object="project.project"
                        link="project_id" domain="[]">
                        <field name="name" />
                    </level>
                </gantt>
            </field>
        </record>

        <!-- search -->
        <record id="view_sprint_search" model="ir.ui.view">
            <field name="name">view.sprint.search</field>
            <field name="model">project.scrum.sprint</field>
            <field name="arch" type="xml">
                <search string="Sprint">
                    <field name="name" />
                    <separator />
                    <filter string="New" name="new"
                        domain="[('state','=','draft')]" />
                    <filter string="In Progress" name="in_progress"
                        domain="[('state','=','open')]" />
                    <filter string="Cancelled" name="cancelled"
                        domain="[('state','=','cancelled')]" />
                    <filter string="Pending" name="pending"
                        domain="[('state','=','pending')]" />
                    <filter string="Closed" name="closed"
                        domain="[('state','=','close')]" />
                    <separator />
                    <group expand="1" string="Group By...">
                        <filter string="User" name="group_user"
                            domain="[]" context="{'group_by':'partner_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- project.scrum.feature.type -->
        <!-- form -->
        <record id="view_feature_type_form" model="ir.ui.view">
            <field name="name">view.feature.type.form</field>
            <field name="model">project.scrum.feature.type</field>
            <field name="type">form</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <form string="Feature Type" version="7.0">
                    <sheet>
                        <group>
                            <group>
                                <field name="code" />
                            </group>
                            <group>
                                <field name="name" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- tree -->
        <record id="view_feature_type_tree" model="ir.ui.view">
            <field name="name">view.feature.type.tree</field>
            <field name="model">project.scrum.feature.type</field>
            <field name="type">tree</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <tree string="Feature Type">
                    <field name="code" />
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- project.scrum.feature -->
        <record model="ir.actions.act_window" id="action_feature">
            <field name="name">Features</field>
            <field name="res_model">project.scrum.feature</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_group_release_backlog': 1, 'search_default_filter_project': 1}</field>
            <field name="search_view_id" ref="view_feature_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new Feature</p>
            </field>
        </record>

        <!-- project.scrum.release.backlog -->
        <record model="ir.actions.act_window" id="action_release_backlog">
            <field name="name">Release Backlog</field>
            <field name="res_model">project.scrum.release.backlog</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_filter_project': 1}</field>
            <field name="search_view_id" ref="view_release_backlog_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new Release Backlog</p>
            </field>
        </record>

        <!-- project.scrum.sprint -->
        <record model="ir.actions.act_window" id="action_sprint">
            <field name="name">Sprints</field>
            <field name="res_model">project.scrum.sprint</field>
            <field name="view_mode">kanban,tree,form,calendar,gantt</field>
            <field name="context">{'search_default_in_progress': 1,'search_default_my_sprints': 1}</field>
            <field name="search_view_id" ref="view_sprint_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new Sprint</p>
            </field>
        </record>

        <!-- project.scrum.feature.type -->
        <record model="ir.actions.act_window" id="action_feature_type">
            <field name="name">Feature Types</field>
            <field name="res_model">project.scrum.feature.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new Feature Type</p>
            </field>
        </record>
    </data>
</openerp>