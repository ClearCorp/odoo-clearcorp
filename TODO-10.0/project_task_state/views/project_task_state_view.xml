<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- form task -->
        <record id="view_task_form" model="ir.ui.view">
            <field name="name">view.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='project_id']"
                       position="replace">
                    <field name="project_id"
                           on_change="onchange_project(project_id)"
                           context="{'default_use_tasks':1}"
                           domain="[('use_tasks','=','True')]"/>
                </xpath>
                <xpath expr="//form/sheet/notebook/page['Extra Info']/group/group/field[@name='partner_id']"
                        position="after">
                    <field name="state" invisible="1"/>
                </xpath>
            </field>
        </record>


        <!--project.task tree view -->
        <record id="project_extended_project_task_tree_view"
                model="ir.ui.view">
            <field name="name">project.extended.view.task.tree</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='stage_id']" position="after">
                    <field name="state" invisible="1"/>
                </xpath>
            </field>
        </record>

        <!-- form stages -->
        <record id="view_stage_form" model="ir.ui.view">
            <field name="name">view.stage.form</field>
            <field name="model">project.task.type</field>
            <field name="inherit_id" ref="project.task_type_edit"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group/group/field[@name='sequence']"
                       position="after">
                    <field name="state"/>
                </xpath>
            </field>
        </record>

        <!--project.stage tree view -->
        <record id="project_extended_project_stage_tree_view"
                model="ir.ui.view">
            <field name="name">project.extended.stage.tree.view</field>
            <field name="model">project.task.type</field>
            <field name="inherit_id" ref="project.task_type_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='fold']" position="after">
                    <field name="state"/>
                </xpath>
            </field>
        </record>

        <!--project.stage search view -->
        <record id="project_stage_search view" model="ir.ui.view">
            <field name="name">project.stage.search.view</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <xpath expr="//search/filter['New']"
                       position="replace">
                    <filter string="New" name="filter_draft"
                            domain="[('stage_id.state', '=', 'draft')]"/>
                    <filter string="In Progress" name="filter_open"
                            domain="[('stage_id.state', '=', 'open')]"/>
                    <filter string="Pending" name="filter_pending"
                            domain="[('stage_id.state', '=', 'pending')]"/>
                    <filter string="Ready" name="filter_ready"
                            domain="[('stage_id.state', '=', 'ready')]"/>
                    <filter string="Done" name="filter_done"
                            domain="[('stage_id.state', '=', 'done')]"/>
                    <filter string="Cancelled" name="filter_cancelled"
                            domain="[('stage_id.state', '=', 'cancelled')]"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
